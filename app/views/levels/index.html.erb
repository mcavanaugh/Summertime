<h1>Listing levels</h1>

<table>
  <tr>
    <th>Symbol</th>
    <th>Active date</th>
    <th>Top</th>
    <th>Base</th>
    <th>Level1</th>
    <th>Level2</th>
    <th>Level3</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @levels.each do |level| %>
  <tr>
    <td><%= level.symbol %></td>
    <td><%= level.active_date %></td>
    <td><%= level.top %></td>
    <td><%= level.base %></td>
    <td><%= level.level1 %></td>
    <td><%= level.level2 %></td>
    <td><%= level.level3 %></td>
    <td><%= link_to 'Show', level %></td>
    <td><%= link_to 'Edit', edit_level_path(level) %></td>
    <td><%= link_to 'Destroy', level, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

